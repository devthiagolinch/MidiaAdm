<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="x_content">
                <% if @user.errors.any? %>
                <div class="alert alert-danger alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert"
                    aria-hidden="true">Ã—</button>
                    <ul>
                        <% @user.errors.full_messages.each do |message| %>
                            <li> <%= message %> </li>
                        <% end %>
                    </ul>
                </div>
            </div>
            <% end %>
            <div>
                <div>
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Edit User Account!</h1>
                        </div>
                        <%= form_with(url: users_backoffice_profile_path, model: @user, local: true) do |form| %>
                        <form class="user">
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <%= form.text_field :first_name, class:"form-control form-control-user", placeholder:"Nome..." %>
                                    
                                </div>
                                <div class="col-sm-6">
                                    <%= form.text_field :last_name, class:"form-control form-control-user", placeholder:"Sobrenome..." %>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <%= form.text_field :email, class:"form-control form-control-user", placeholder:"E-mail..." %>
                                </div>
                                <div class="col-sm-6">
                                <%= form.date_field :birth_date, class:"form-control form-control-control"%>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <%= form.password_field :password, class:"form-control form-control-user", placeholder:"Digite sua senha" %>
                                </div>
                                <div class="col-sm-6">
                                    <%= form.password_field :password_confirmation, class:"form-control form-control-user", placeholder:"Confirme sua senha" %>
                                </div>
                            </div>
                            <button class="btn btn-primary btn-user btn-block">
                                Atualizar
                            </button>
                        </form>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>