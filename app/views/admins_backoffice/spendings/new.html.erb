<!-- Basic Card Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Novo Gasto</h6>
    </div>
    <div class="card-body">
        <%= form_with(model: [:admins_backoffice, @spending], local: true) do |form| %>
            <div class="form-group">
            <%= form.label :date %>
            <%= form.date_field :date ,class:"form-control form-control-user", placeholder:"Nome" %>
            </div>

            <div class="form-group">
            <%= form.label :description %>
            <%= form.text_field :description ,class:"form-control form-control-user", placeholder:"exemplo@exemplo.com" %>
            </div>

            <div class="form-group">
            <%= form.label :value %>
            <%= form.text_field :value ,class:"form-control form-control-user", placeholder:"67 99999-9999" %>
            </div>

            <button type="submit" class="btn btn-primary btn-user btn-block">Salvar</button>
        <% end %>
    </div>
</div>