<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                <div class="col-lg-7">
                  <div class="p-5">
                    <div class="text-center">
                      <h1 class="h4 text-gray-900 mb-4">Registre-se!</h1>
                    </div>
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= render "users/shared/error_messages", resource: resource %>
                    <form class="user">
                        <div class="form-group">
                          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-control-user" ,
                              placeholder:"Digite seu email" %>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <% if @minimum_password_length %>
                                <em>(<%= @minimum_password_length %> dígitos no mínimo)</em>
                                <% end %><br />
                                <%= f.password_field :password, autocomplete: "new-password", class:"form-control form-control-user",
                                    placeholder:"Digite sua senha" %>
                            </div>
                            <div class="col-sm-6">
                                <% if @minimum_password_length %>
                                <em>(<%= @minimum_password_length %> dígitos no mínimo)</em>
                                <% end %><br />
                                <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control form-control-user",
                                  placeholder:"Digite novamente sua senha" %>
                            </div>
                        </div>
                        <button class="btn btn-primary btn-user btn-block">
                            Resgistrar
                        </button>
                    </form>
                    <% end %>
                    <hr>
                    <div class="text-center">

                      <%= link_to new_session_path(resource_name), class:"small" do %>
                        Já possuí uma conta? Login!
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
        </div>
    </div>
</div>